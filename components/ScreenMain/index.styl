.ScreenMain {
  overflow: hidden;
  position: relative;
}

.ScreenMain__Personal {
  margin: 24px 0 0 24px;
}

.ScreenMain__FullName {
  margin-bottom: 12px;
}

.ScreenMain__Image_type_avatar {
    width: 196px;
    height: 196px;

    border-radius: 50%;
    border: 2px solid #fff;

    box-shadow: 0 0 2px 2px #dedede;

    position: fixed;

    bottom: calc(20% - 104px);
    right: 60px;
}

.ScreenMain__Block_type_blue {
  bottom: calc(-100% + 64px);
  width: 100%;
  height: 100%;
  background-color: #38598c;
  position: absolute;
  box-shadow: 0 -2px 3px 2px #dedede;
}

.ScreenMain__Image {
  transition: .3s bottom cubic-bezier(0.22, 0.61, 0.36, 1);
}

.ScreenMain__Image_fixed {
  bottom: calc(100% - 108px);
  max-width: 80px;
  max-height: 80px;
}
